<article class="post">
    <div class="bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 overflow-hidden sm:py-24 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 lg:gap-x-8">
  
        <a href="/post/{{id}}" class="group text-sm">
          <div class="w-full aspect-w-1 aspect-h-1 rounded-lg overflow-hidden bg-gray-100 group-hover:opacity-75">
            <img id="post-img" src="{{img_url}}" alt="User item upload" class="w-full h-full object-center object-cover"></img>
          </div>
          <h3 class="mt-4 font-medium text-gray-900 text-xl text-center">
            {{title}}
          </h3>
          <p class="mt-2 font-medium text-gray-900 text-md text-center">
            ${{post_price}}
          </p>
        </a>

      </div>
    </div>
  </div>
</article>